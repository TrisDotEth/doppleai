datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Post {
  id              Int      @id @default(autoincrement())
  body            String
  user            String
  manualPost      Boolean
  usedAsPost      Boolean
  profileImageUrl String?
  firstName       String?
  lastName        String?
  whenWillPost    DateTime @default(now())
  createdAt       DateTime @default(now())
}
